<%= form_for(task) do |f| %>

<% if task.errors.any? %>

  <div id='error_explanation'>
    <ul>
<% task.errors.full_messages.each do |tasks| %>
      <li><%= task %></li>
      
<% end %>
    </ul>
  </div>
  
<% end %>

<%= f.label :status, '状況' %>

<%= f.text_field :status %>

<%= f.label :content, 'タスク' %>

<%= f.text_field :content %>

<%= f.submit '作成' %>

<% end %>
